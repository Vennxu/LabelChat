<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- -->
    </style>

    <style name="input_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/input_selector</item>
    </style>

    <style name="LabelShowOperationTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="DialogOperationTextStyle">
        <item name="android:minHeight">55dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/label_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorLabelTextDark</item>
    </style>

    <style name="LabelShowTextStyle" parent="@style/LabelTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorLabelTextLight</item>
    </style>

    <style name="LargeButtonStyle">
        <item name="android:background">@drawable/submit_btn_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingToggenStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@drawable/setting_state_selector</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="SettingItemDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="SettingTableRowStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingItemTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.38</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingItemContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.62</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/user_name_sample</item>
    </style>

    <style name="RegionRowStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
    </style>

    <style name="RegionRowTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FriendDetailTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorLightDark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PieViewStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="GetDialogTextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="labelstory_loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/storylabel_pulllistview_loading</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ContactPageRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/contact_page_radio_text</item>
        <item name="android:background">@drawable/contact_page_radio_background</item>
    </style>

    <style name="ShareItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ShareItemIconStyle">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="ShareItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShareItemLeftSpaceStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShareItemCenterSpaceStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ShareItemRightSpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PersonalShowPageRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/personal_show_page_radio_text</item>
    </style>

    <style name="UserInfoTableRowStyle">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserInfoItemTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UserInfoItemContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/user_name_sample</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/user_name_sample</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/start_conf_file</item>
        <item name="android:indeterminateDrawable">@drawable/start_conf_file</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
    </style>

    <style name="myBigRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/start_big_conf_file</item>
        <item name="android:indeterminateDrawable">@drawable/start_big_conf_file</item>
        <item name="android:minWidth">30dip</item>
        <item name="android:minHeight">30dip</item>
    </style>

    <style name="LabelRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/label_rating_drawable</item>
        <item name="android:indeterminateDrawable">@drawable/label_rating_drawable</item>
        <item name="sampleTile">@drawable/label_rating_drawable</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="MainTabRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/main_tab_radio_text</item>
    </style>

    <style name="UserInfoRadioStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelSelectTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Label</item>
    </style>

    <style name="LabelSelectTextStyle10" parent="style/LabelSelectTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LabelSelectTextStyle20" parent="style/LabelSelectTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NormalTitleBarStyle">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_title_height</item>
        <item name="android:background">@color/actionBarStyle</item>
    </style>

    <style name="NormalIconStyle">
        <item name="android:id">@id/icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="NormalRightTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">8dp</item>

    </style>

    <style name="NormalRightIconStyle">
        <item name="android:id">@id/right_icon</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="NormalTitleStyle">
        <item name="android:id">@id/title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="FadingActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ValidateBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">50dp</item>
    </style>

    <style name="MoodRadioStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/mood_emoji_selector</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/mood_emoji_radio_text</item>
    </style>

    <style name="NumberProgressBar_Default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="progress_max">100</item>
        <item name="number_progress">0</item>
        <item name="progress_unreached_color">#CCCCCC</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">#3498DB</item>
        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>

</resources>