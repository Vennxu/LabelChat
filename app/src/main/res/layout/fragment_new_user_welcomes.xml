<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/normal_title" />

    <TextView
        android:id="@+id/show_tiem"
        style="@style/ChatItemDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="@string/time_sample" />

    <com.ekuater.labelchat.ui.widget.CircleImageView
        android:id="@+id/stranger_friend_image"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="76dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/show_text"
        style="@style/ChatItemSendContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="61dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/chatting_item_recv_content_selector_normal"
        android:text="@string/new_user_welcomes" />
</RelativeLayout>