<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/avatar_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/avatar_container"
        android:layout_alignEnd="@+id/avatar_container"
        android:layout_alignLeft="@+id/avatar_container"
        android:layout_alignRight="@+id/avatar_container"
        android:layout_alignStart="@+id/avatar_container"
        android:layout_alignTop="@+id/avatar_container">

        <com.ekuater.labelchat.ui.widget.CircleImageView
            android:id="@+id/contact_avatar_image2"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:src="@color/transparent"
            app:border_color="@color/colorLightDark"
            app:border_width="2dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_show_bg" />

    <FrameLayout
        android:id="@+id/avatar_container"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp">

        <com.ekuater.labelchat.ui.widget.CircleImageView
            android:id="@+id/contact_avatar_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/contact_single"
            app:border_color="@color/white"
            app:border_width="1dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_background"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/avatar_container2"
        android:layout_toStartOf="@+id/avatar_container2"
        android:gravity="right"
        android:singleLine="true"
        android:text="@string/region"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/top_background"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:gravity="left"
        android:layout_toEndOf="@+id/avatar_container"
        android:layout_toRightOf="@+id/avatar_container"
        android:singleLine="true"
        android:text="@string/signature_sample"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="?android:actionBarSize" />
</RelativeLayout>
