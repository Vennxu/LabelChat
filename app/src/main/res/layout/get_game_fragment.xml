<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    >

    <LinearLayout
        android:id="@+id/linear_game_linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.ekuater.labelchat.ui.fragment.get.RectProgressView
            android:id="@+id/get_progress_score"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="22dp"
            android_custom:radiuss="5dp"
            android_custom:text="得分：00"
            android:layout_margin="10dp"
            android_custom:max="100"
            android_custom:progress="0"/>
        <TextView
            android:text="100"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
	 <com.ekuater.labelchat.ui.fragment.get.RectProgressView
            android:id="@+id/get_progress_time"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android_custom:radiuss="5dp"
            android_custom:max="200000"
            android_custom:progressColor="#cccccc"
            android_custom:initColor="#66cd00"

           />
        <TextView
            android:text="20 '"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
	<TableLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:padding="5dip"
		android:layout_weight="5"
		>  
		<TableRow
		     android:gravity="center"
		     android:layout_weight="1"
		    >
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image1"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@drawable/default_get"
				android:layout_weight="1"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image2"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="1"
				android:src="@drawable/default_get"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image3"
			android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@drawable/default_get"
				android:layout_weight="1"
				/>	
		</TableRow>
		<TableRow
		    android:gravity="center"
		    android:layout_weight="1"
		    >
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image4"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="1"
				android:src="@drawable/default_get"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image5"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="1"
				android:src="@drawable/default_get"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image6"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@drawable/default_get"
				android:layout_weight="1"
				/>	
		</TableRow>
		<TableRow
		    android:layout_weight="1"
             android:gravity="center"
		    >
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image7"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@drawable/default_get"
				android:layout_weight="1"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image8"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:src="@drawable/default_get"
				android:layout_weight="1"
				/>	
			<com.ekuater.labelchat.ui.widget.CircleImageView
				android:id="@+id/image9"
				android:layout_width="80dp"
				android:layout_height="80dp"
				android:layout_weight="1"
				android:src="@drawable/default_get"
				/>	
		</TableRow>
	</TableLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_game_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/image_game_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loading"/>
        <TextView
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prepare"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
</RelativeLayout>
