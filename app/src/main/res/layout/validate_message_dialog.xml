<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/validate_message_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            style="@style/DialogOperationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add_friend" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_validate_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_area"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/input_selector"
        android:gravity="left|top"
        android:hint="@string/validate_message_hint"
        android:inputType="textMultiLine"
        android:maxLength="150"
        android:minHeight="100dp"
        android:minLines="5"
        android:textColor="#ff000000"
        android:textColorHint="#ff808080"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_validate_message"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            style="@style/DialogOperationTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/colorRemarks" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#FFCCCCCC" />

        <TextView
            android:id="@+id/send"
            style="@style/DialogOperationTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/send"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</RelativeLayout>