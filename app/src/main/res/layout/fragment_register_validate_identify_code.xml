<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/register_prompt_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/send_identify_code_to_phone"
        android:textColor="#FF000000"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/register_identifying_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_state_selector"
            android:hint="@string/input_identify_code"
            android:inputType="phone"
            android:textColor="#ff000000"
            android:textColorHint="#ff808080"
            android:textSize="16sp" />

        <Button
            android:id="@+id/register_resend_identifying_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_identifying_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/submit_btn_selector"
            android:clickable="true"
            android:text="@string/resend_identify_code"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_resend_identifying_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/submit_btn_selector"
            android:clickable="true"
            android:text="@string/submit"
            android:textColor="#ffffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>
