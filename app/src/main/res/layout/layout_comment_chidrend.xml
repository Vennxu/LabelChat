<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/comment_childrend_linnear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:paddingBottom="5dp">

        <LinearLayout
            android:id="@+id/comment_childrend_txtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <com.ekuater.labelchat.ui.widget.CircleImageView
                android:id="@+id/comment_childrend_tx"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/contact_single"
                />
            <TextView
                android:id="@+id/comment_childrend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/comment_childrend_txtime"
                android:textColor="#898989"
                android:textSize="15sp"/>
        </LinearLayout>






        <com.ekuater.labelchat.ui.widget.emoji.ShowContentTextView
            android:id="@+id/comment_childrend_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="102dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/comment_childrend_txtime"
            android:textColor="#313131"
            android:textSize="16sp"
            app:isDynamic="true"
            />
        <TextView
            android:id="@+id/comment_childrend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_childrend_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="sdfasdfasdfsdfsdfsdf"
            android:textColor="#898989"
            android:textSize="15sp"/>
       
    </RelativeLayout>
    <com.ekuater.labelchat.ui.widget.DashedLineView
        android:layout_width="match_parent"
        android:layout_marginLeft="55dp"
        android:layout_height="20px"/>
</FrameLayout>
