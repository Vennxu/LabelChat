<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/no_throw_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/user_show_top_title_height"
        android:src="@drawable/no_throw_photo" />

    <Button
        android:id="@+id/btn_throw_photo"
        style="@style/LargeButtonStyle"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:text="@string/throw_photo" />
</LinearLayout>