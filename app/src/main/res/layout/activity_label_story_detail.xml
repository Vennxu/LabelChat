<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title_back_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_title_height"
        android:background="@color/actionBarStyle">

        <ImageView
            android:id="@+id/title_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/lc_ic_ab_back_am" />

        <TextView
            android:id="@+id/title_text_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/labelstory_input_detail" />

        <ImageView
            android:id="@+id/title_image_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_share"
            android:visibility="gone" />
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_back_relative" />

</RelativeLayout>
