<?xml version="1.0" encoding="utf-8"?>
<com.ekuater.labelchat.ui.widget.emoji.EmojiSelector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0f0f0"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/emoji_selector_child_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.ekuater.labelchat.ui.widget.emoji.pagerindicator.CirclePageIndicator
        android:id="@+id/emoji_selector_indicator"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</com.ekuater.labelchat.ui.widget.emoji.EmojiSelector>