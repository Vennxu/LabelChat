<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/normal_title" />


    <AutoCompleteTextView
        android:id="@+id/keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/role_search"
        android:completionThreshold="1"
        android:gravity="center"
        android:hint="@string/role_search_hint"
        android:minHeight="45dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/colorRemarks"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLabelTextDark" />


    <ListView
        android:id="@+id/confide_role_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/colorLabelTextDark"
        android:dividerHeight="1px" />

</LinearLayout>