<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/praise_label_different">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label"
            style="@style/LabelTextStyle"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:text="@string/label_sample_0"
            android:textSize="18sp" />

        <Space
            android:layout_width="5dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/praise"
            style="@style/LabelTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableEnd="@drawable/ic_user_label_praise"
            android:drawableRight="@drawable/ic_user_label_praise"
            android:gravity="bottom|center_horizontal"
            android:singleLine="true"
            android:text="@string/label_count_sample"
            android:textColor="#FF959595"
            android:textSize="13sp" />
    </LinearLayout>
</FrameLayout>