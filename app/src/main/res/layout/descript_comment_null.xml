<?xml version="1.0" encoding="utf-8"?>
 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/descript_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.ekuater.labelchat.ui.fragment.labelstory.NoScrollListview
                android:id="@+id/desdcript_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:divider="@null"
                android:listSelector="@android:color/transparent" />
            <ImageView
                android:id="@+id/desdcript_comment_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desdcript_comment"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/descript_comment_loading_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/descript_comment_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/loading" />
        </LinearLayout>

    </FrameLayout>

