<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/user_base_info"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorLightDark" />


    <LinearLayout
        android:id="@+id/user_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/remark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
          >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="@string/remark"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/remark_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />

            <FrameLayout
                android:id="@+id/edit_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit_remark" />
            </FrameLayout>
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark"
      />

        <RelativeLayout
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/nickname"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nickname_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gender_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/label_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/label_code"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_number_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/region"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/region_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/school"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/school_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/job"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/job_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/constellation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/constellation"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/constellation_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider8"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/age"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/age_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightDark" />

        <RelativeLayout
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="@string/height"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/height_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="110dp"
                android:textColor="@color/colorLightDark"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>