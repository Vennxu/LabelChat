<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="44dp"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/register_label_user_id_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/input_state_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/phone_colon"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start|center_vertical"
            android:maxLength="@integer/mobile_length"
            android:textColor="@color/black"
            android:textColorHint="#ff808080"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_password_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_label_user_id_area"
        android:layout_marginTop="40dp"
        android:background="@drawable/input_state_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/password_colon"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/enter_password_prompt"
            android:inputType="textPassword"
            android:maxLength="@integer/password_max_length"
            android:textColor="@color/black"
            android:textColorHint="#ff808080"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_password_again_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_password_area"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_state_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/password_confirm_colon"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/register_password_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/enter_password_confirm_prompt"
            android:inputType="textPassword"
            android:maxLength="@integer/password_max_length"
            android:textColor="@color/black"
            android:textColorHint="#ff808080"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_password_again_area"
        android:layout_marginTop="50dp"
        android:background="@drawable/submit_btn_selector"
        android:clickable="true"
        android:text="@string/submit"
        android:textColor="#ffffffff"
        android:textSize="18sp" />
</RelativeLayout>
