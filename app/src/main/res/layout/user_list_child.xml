<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp">

        <com.ekuater.labelchat.ui.widget.CircleImageView
            android:id="@+id/user_list_child_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/get"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/user_list_child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="流氓"
            android:layout_centerVertical="true"
            android:textColor="@color/story_name"
            android:layout_toRightOf="@id/user_list_child_image" />

        <ImageView
            android:id="@+id/user_list_child_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lc_btn_check"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/story_grey"
        android:layout_marginLeft="20dp"/>
</LinearLayout>

